{
    "compilerOptions": {
        "allowJs": true,
        "allowUnreachableCode": false,
        "baseUrl": ".",
        "checkJs": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": false,
        // "target": "esnext",
        "target": "es6",
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": false,
        "noLib": false,
        "watch": false,
        "outDir": "./",
        "noImplicitReturns": false,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": false,
        "pretty": true,
        "resolveJsonModule": true
    },
    "include": [
        "lib/*.ts"
    ],
    // "files": [
    //     "lib/*.ts",
    //     "index.d.ts"
    // ],  
    "exclude": [
        "node_modules"
  ]
  }
